
<div class="banner mb-5 d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/featured/?<%= rand(1000) %>'); height: 50vh; size:cover; position: center;">
  <h1 class="text-white display-2 m-4"><%= @list.name %></h1>
  <%= link_to 'Back to Lists', lists_path, class:"btn btn-success m-2" %>
  <%= link_to 'Add movie to this playlist', new_list_bookmark_path(@list), class:"btn btn-success m-2" %>

</div>


<div class="filling-box">
  <div class="upper-div">
    <div class="container">
      <div class="row">
        <% @list_movies.each do |movie| %>

          <div class="col-12 col-sm-6 col-lg-4 d-flex justify-content-center mb-3">
            <% this_bookmark = @list_bookmarks.find{|bookmark| bookmark.movie_id == movie.id}%>

            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src=<%= movie.poster_url%> alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= movie.title%></h5>
                <p class="card-text"><%= movie.overview%></p>
              </div>
              <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= movie.rating%>/10</li>
                <li class="list-group-item"><%= this_bookmark.comment%></li>
              </ul>
              <div class="card-body">
                <%= link_to "Delete from list", bookmark_path(this_bookmark), method: :delete, class:"btn btn-success" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="col-12 col-sm-6 col-lg-4 d-flex justify-content-center mb-3">

          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">List reviews</h5>
            </div>
            <ul class="list-group list-group-flush flex-grow-1">

              <% @list.comments.each do |comment| %>
                <li class="list-group-item"> <%= comment.content %> </li>
              <% end %>

            </ul>
            <div class="card-body">
              <%= simple_form_for [@list, @comment] do |f| %>
                <%= f.input :content, placeholder: "Add your review here..." %>
                <%= f.submit "Validate Comment", class: "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
